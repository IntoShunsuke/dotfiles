# aliases
alias ls="ls -F --color=auto"
alias ll="ls -l"
alias la="ls -a"
alias lla="ls -la"

alias grep='grep --color=auto'
alias c="clear"
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

if type "nvim" > /dev/null 2>&1; then
  alias vim="nvim"
fi

alias sc="screen"
alias scl="screen -ls"
alias scs="screen -S"
alias scr="screen -r"




